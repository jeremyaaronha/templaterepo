
<% if (notice && notice.length > 0) { %>
    <div class="flash-message">
      <p><%= notice %></p>
    </div>
  <% } %>

<h2>Welcome <%= account.account_firstname %></h2>

<!-- Link to update account information visible to all account types -->
<p><a href="/account/update/<%= account.account_id %>">Update Account Information</a></p>

<% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
    <!-- Inventory Management Section only for Employee and Admin -->
    <h3>Inventory Management</h3>
    <p><a href="/inv/management">Go to Inventory Management</a></p>
<% } %>

<!-- Mostrar mensajes flash -->
<% if (typeof flash !== 'undefined') { %>
  <div class="flash-message">
    <p><%= flash.message %></p>
  </div>
<% } %>

<!-- Mostrar errores -->
<% if (typeof errors !== 'undefined') { %>
  <div class="error-message">
    <p><%= errors.message %></p>
  </div>
<% } %>