<h1>Update Account Information</h1>

<% if (errors && errors.length > 0) { %>
  <div class="error-message">
    <p>Please fix the following errors:</p>
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/account/update" method="POST">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

  <label for="account_firstname">First Name:</label>
  <input type="text" name="account_firstname" id="account_firstname" value="<%= accountData.account_firstname %>" required>

  <label for="account_lastname">Last Name:</label>
  <input type="text" name="account_lastname" id="account_lastname" value="<%= accountData.account_lastname %>" required>

  <label for="account_email">Email:</label>
  <input type="email" name="account_email" id="account_email" value="<%= accountData.account_email %>" required>


  <button type="submit">Update Information</button>
</form>


