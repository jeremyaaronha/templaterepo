<h1>Add New Inventory</h1>

<% if (errors && errors.length > 0) { %>
    <div class="error-message">
      <p>There were problems with the fields. Please check and try again:</p>
      <ul>
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-inventory" method="post" >

    <label for="classification_id">Classification:</label>
    <%- classificationList %>
  
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required pattern="[A-Za-z\s]+" 
           title="Make must contain only letters." 
           placeholder="Make must contain only letters."
           value="<%= locals.inv_make || '' %>">
  
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required pattern="[A-Za-z0-9\s]+"
           title="Model can contain letters and numbers." 
           placeholder="Model can contain letters and numbers."
           value="<%= locals.inv_model || '' %>">
  
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" required min="1886" max="2024"
           title="Enter a valid year." 
           placeholder="Enter a valid year (1886-2024)." 
           value="<%= locals.inv_year || '' %>">
  
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required 
              title="Please enter a description." 
              placeholder="Please enter a description."><%= locals.inv_description || '' %></textarea>
  
    <label for="inv_image">Image URL:</label>
    <input type="text" id="inv_image" name="inv_image" required 
           placeholder="https://example.com/image.jpg"
           title="Enter a valid image URL." 
           value="<%= locals.inv_image || '' %>">
  
    <label for="inv_thumbnail">Thumbnail URL:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required 
           placeholder="https://example.com/thumbnail.jpg"
           title="Enter a valid thumbnail URL." 
           value="<%= locals.inv_thumbnail || '' %>">
  
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required min="0"
           title="Enter a valid price." 
           placeholder="Enter a valid price." 
           value="<%= locals.inv_price || '' %>">
  
    <label for="inv_miles">Mileage:</label>
    <input type="number" id="inv_miles" name="inv_miles" required min="0"
           title="Enter valid mileage." 
           placeholder="Enter valid mileage." 
           value="<%= locals.inv_miles || '' %>">
  
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required pattern="[A-Za-z]+"
           title="Color must contain only letters." 
           placeholder="Color must contain only letters." 
           value="<%= locals.inv_color || '' %>">
  
    <button type="submit">Add Vehicle</button>
  </form>
  